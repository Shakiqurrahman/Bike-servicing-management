generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  customerId String  @id @default(uuid())
  name       String
  email      String  @unique
  phone      String
  isDeleted  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
}

model Bike {
  bikeId String @id @default(uuid())
  brand  String
  model  String
  year   Int
}
